    <!--Programs-->

    <bean id = "keaddonexample.mchexample.program" class="org.openmrs.module.kenyacore.program.ProgramDescriptor">
        <property name="targetUuid" value="b32ca1cc-5dad-48e4-b340-6d7857364f5b" />
        <property name= "eligibilityCalculation" value="org.openmrs.module.keaddonexample.calculation.EligibleForMCHProgram"/>
        <property name= "defaultEnrollmentForm" ref="kenyaemr.mchms.form.enrollment"/>
        <property name="defaultCompletionForm" ref="kenyaemr.mchms.form.completion"/>
    </bean>

    <bean id = "keaddonexample.postnatalcare.program" class="org.openmrs.module.kenyacore.program.ProgramDescriptor">
        <property name="targetUuid" value="199f012f-1a94-402c-b12d-b869edb7994e" />
        <property name= "eligibilityCalculation" value="org.openmrs.module.keaddonexample.calculation.EligibleForPostNatalCareProgram"/>
        <property name= "defaultEnrollmentForm" ref="kenyaemr.mchms.form.enrollment"/>
        <property name="defaultCompletionForm" ref="kenyaemr.mchms.form.completion"/>
