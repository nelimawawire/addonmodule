<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Apps -->

	<bean id="keaddonexample.app.example" factory-bean="kenyacore.appFactoryBean" factory-method="createInstance">
		<constructor-arg value="keaddonexample.example" />
		<constructor-arg value="Add-On" />
		<constructor-arg value="keaddonexample/helloWorld" />
		<constructor-arg value="keaddonexample:apps/example.png" />
		<constructor-arg value="700" />
	</bean>

	<!-- Forms -->

	<bean id="keaddonexample.form.example" class="org.openmrs.module.kenyacore.form.FormDescriptor">
		<property name="targetUuid" value="b694b1bc-2086-47dd-a4ad-ba48f9471e4b" />
		<property name="apps">
			<set>
				<ref bean="kenyaemr.app.clinician" />
				<ref bean="kenyaemr.app.chart" />
			</set>
		</property>
		<property name="icon" value="keaddonexample:forms/example.png" />
		<property name="htmlform" value="keaddonexample:example.xml" />
	</bean>

    <bean id="keaddonexample.config.form" class="org.openmrs.module.kenyacore.form.FormConfiguration">
		<!-- Example of adding a form to the general visit form list -->
		<property name="commonVisitForms">
			<set>
				<ref bean="keaddonexample.form.example" />
			</set>
		</property>

		<!-- Example of adding a form to the HIV program visit form list -->
		<!--<property name="programVisitForms">
			<map>
				<entry key-ref="kenyaemr.program.hiv">
					<set><ref bean="kenyaapp.form.example" /></set>
				</entry>
			</map>
		</property>-->

		<!-- Example of disabling an existing form. This form will no longer appear in the "Available Forms" list -->
		<property name="disabledForms">
			<set>
				<ref bean="kenyaemr.common.form.progressNote" />
			</set>
		</property>
	</bean>

    <bean id="keaddonexample.form.pncEnrollment" class="org.openmrs.module.kenyacore.form.FormDescriptor">
        <property name="targetUuid" value="c9dd40cf-5333-49ef-88a0-351ca5255bd4" />
        <property name="apps">
            <set>
                <ref bean="kenyaemr.app.clinician" />
                <ref bean="kenyaemr.app.chart" />
            </set>
        </property>
        <property name="icon" value="keaddonexample:forms/example.png" />
        <property name="htmlform" value="keaddonexample:pncEnrollment.xml" />
    </bean>

    <bean id="keaddonexample.config.pncform" class="org.openmrs.module.kenyacore.form.FormConfiguration">
        <property name="commonVisitForms">
            <set>
                <ref bean="keaddonexample.form.pncEnrollment" />
            </set>
        </property>
    </bean>


    <bean id="keaddonexample.form.EIDLabRequisition" class="org.openmrs.module.kenyacore.form.FormDescriptor">
        <property name="targetUuid" value="e82608d8-6d03-486c-a4c4-c40e8d54e652" />
        <property name="apps">
            <set>
                <ref bean="kenyaemr.app.clinician" />
                <ref bean="kenyaemr.app.chart" />
            </set>
        </property>
        <property name="icon" value="keaddonexample:forms/example.png" />
        <property name="htmlform" value="keaddonexample:EIDLabRequisition.xml" />
    </bean>

    <bean id="keaddonexample.config.EIDLabRequisitionForm" class="org.openmrs.module.kenyacore.form.FormConfiguration">
        <property name="commonVisitForms">
            <set>
                <ref bean="keaddonexample.form.EIDLabRequisition" />
            </set>
        </property>
    </bean>

    <!--Reports-->

    <bean id="keaddonexample.common.reports.keaddonReport" class="org.openmrs.module.kenyacore.report.CalculationReportDescriptor">
        <property name="targetUuid" value="b694b1bc-2086-47dd-a4ad-ba48f9471e4b" />
        <property name="name" value="Patients enrolled for HIV program" />
        <property name="calculation" value="org.openmrs.module.keaddonexample.calculation.keaddonexampleCalculation" />
        <property name="apps"><set><ref bean="kenyaemr.app.reports" /></set></property>
    </bean>

    <bean id="keaddonexample.common.report" class="org.openmrs.module.kenyacore.report.ReportConfiguration">
        <property name="commonReports" >
            <ref bean="keaddonexample.common.reports.keaddonReport"/>
        </property>
    </bean>


